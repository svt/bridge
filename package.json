{
  "name": "bridge",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "standard",
    "dev": "webpack serve --config webpack.dev.js",
    "start": "node index.js",
    "nodemon": "nodemon --inspect=0.0.0.0 index.js",
    "build": "npm run clean | webpack --config webpack.prod.js",
    "build:plugins": "node plugins/bundle.js",
    "clean": "rm -r ./dist",
    "electron": "NODE_ENV=development electron index.js",
    "electron:build:mac": "npm run build && electron-packager . \"Bridge\" --platform=darwin --arch=x64 --icon=media/appicon.icns --overwrite --ignore=\"webpack.*\\.js\" --out ./bin",
    "electron:build:win": "npm run build && electron-packager . \"Bridge\" --platform=win32 --arch=x64 --overwrite --ignore=\"webpack.*\\.js\" --out ./bin",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:svt/bridge.git"
  },
  "keywords": [
    "bridge",
    "television",
    "production",
    "graphics"
  ],
  "author": "Axel Boberg (axel.boberg@svt.se)",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.10.0",
    "electron": "^12.2.3",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "object-path": "^0.11.8",
    "react-colorful": "^5.5.1",
    "react-grid-layout": "^1.3.1",
    "react-json-view": "^1.21.3",
    "react-router-dom": "^5.2.0",
    "semver": "^7.3.5",
    "uuid": "^8.3.2",
    "ws": "^8.2.3"
  },
  "standard": {
    "enable": true,
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.0",
    "electron-packager": "^15.4.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "mini-css-extract-plugin": "^1.3.9",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard": "^16.0.4",
    "webpack": "^5.28.0",
    "webpack-asset-map": "^1.0.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.7.3"
  }
}
