{
  "name": "bridge",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "standard",
    "dev": "webpack serve --config webpack.dev.js",
    "start": "node index.js",
    "nodemon": "nodemon index.js",
    "build": "npm run clean | webpack --config webpack.prod.js",
    "clean": "rm -r ./dist",
    "electron:start": "NODE_ENV=production electron index.js",
    "electron:build:mac": "npm run build && electron-packager . \"Bridge\" --platform=darwin --arch=x64 --icon=appicon.icns --overwrite --ignore=\"webpack.*\\.js\" --out ./bin",
    "electron:build:win": "npm run build && electron-packager . \"Bridge\" --platform=win32 --arch=x64 --overwrite --ignore=\"webpack.*\\.js\" --out ./bin"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:svt/bridge.git"
  },
  "keywords": [
    "bridge",
    "television",
    "production",
    "graphics"
  ],
  "author": "Axel Boberg (axel.boberg@svt.se)",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "electron": "^12.2.3",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "object-path": "^0.11.8",
    "react-grid-layout": "^1.3.1",
    "react-router-dom": "^5.2.0",
    "uuid": "^8.3.2",
    "ws": "^8.2.3"
  },
  "standard": {
    "enable": true
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
