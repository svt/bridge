    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.2",
    "electron-packager": "^15.4.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard": "^16.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.28.0",
    "webpack-asset-map": "^1.0.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.7.3"
  }
