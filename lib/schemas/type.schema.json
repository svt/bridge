{
  "$id": "https://bridge.svt.se/schemas/type",
  "$schema": "http://json-schema.org/draft-07/schema",
  "$defs": {
    "property": {

    }
  },
  "title": "Type",
  "description": "The declaration of a type",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "A globally unique identifier for the type"
    },
    "inherits": {
      "type": "string",
      "description": "Inherit properties and presentation from another type"
    },
    "name": {
      "type": "string",
      "description": "A human readable name of the type, if omitted, this type won't be shown in the interface"
    },
    "ui.icon": {
      "type": "string",
      "description": "An icon to use for this type"
    },
    "category": {
      "type": "string",
      "description": "A category name for the type, for more semantic organisation"
    },
    "default": {
      "description": "A default value"
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["string", "number", "text", "color", "enum", "boolean", "keybinding"]
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "default": {},
            "group": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "oneOf": [
    { "required": [ "id" ] },
    { "required": [ "extends" ] }
  ]
}