{
  "name": "bridge-plugin-types",
  "version": "1.0.0",
  "main": "index.js",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "bridge": "^0.0.1"
  },
  "keywords": [
    "bridge",
    "plugin"
  ],
  "contributes": {
    "types": [
      {
        "id": "bridge.types.root",
        "properties": {
          "name": {
            "name": "Name",
            "type": "string",
            "default": "Unnamed",
            "allowsVariables": true
          },
          "notes": {
            "name": "Notes",
            "type": "text",
            "allowsVariables": true
          },
          "color": {
            "name": "Color",
            "type": "color",
            "default": "#FF4B7D"
          }
        }
      },
      {
        "id": "bridge.types.delayable",
        "inherits": "bridge.types.playable",
        "properties": {
          "delay": {
            "name": "Delay",
            "type": "string",
            "allowsVariables": true,
            "ui.group": "Timing",
            "ui.unit": "ms"
          }
        }
      },
      {
        "id": "bridge.types.media",
        "inherits": "bridge.types.playable",
        "properties": {
          "name": {
            "default": "Media"
          },
          "duration": {
            "name": "Duration",
            "type": "string",
            "ui.group": "Timing",
            "ui.unit": "ms"
          },
          "delay": {
            "name": "Delay",
            "type": "string",
            "allowsVariables": true,
            "ui.group": "Timing",
            "ui.unit": "ms"
          }
        }
      },
      {
        "id": "bridge.types.group",
        "name": "Group",
        "inherits": "bridge.types.media",
        "properties": {
          "name": {
            "default": "Group"
          },
          "playMode": {
            "name": "Play mode",
            "type": "enum",
            "default": 0,
            "enum": ["Trigger all children at once", "Trigger the first child"],
            "ui.group": "Timing"
          }
        }
      },
      {
        "id": "bridge.types.divider",
        "name": "Divider",
        "inherits": "bridge.types.root"
      },
      {
        "id": "bridge.types.trigger",
        "inherits": "bridge.types.reference",
        "category": "Triggers",
        "ui.icon": "trigger",
        "properties": {
          "name": {
            "default": "Trigger"
          },
          "color": {
            "default": "#E543FF"
          }
        }
      }
    ],
    "settings": [
      {
        "group": "Types",
        "title": "Default on play action",
        "inputs": [
          {
            "type": "select",
            "label": "Save the project and restart Bridge for this setting to take effect",
            "bind": "shared.plugins.bridge-plugin-types.settings.defaults.onPlay",
            "options": ["Do nothing", "Play next sibling", "Select next sibling (main client)"]
          }
        ]
      },
      {
        "group": "Types",
        "title": "Default on end action",
        "inputs": [
          {
            "type": "select",
            "label": "Save the project and restart Bridge for this setting to take effect",
            "bind": "shared.plugins.bridge-plugin-types.settings.defaults.onEnd",
            "options": ["Do nothing", "Play next sibling", "Select next sibling (main client)"]
          }
        ]
      }
    ]
  },
  "author": "Axel Boberg (axel.boberg@svt.se)",
  "license": "UNLICENSED"
}
