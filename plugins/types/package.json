{
  "name": "bridge-plugin-types",
  "version": "1.0.0",
  "main": "index.js",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "bridge": "^0.0.1"
  },
  "keywords": [
    "bridge",
    "plugin"
  ],
  "contributes": {
    "types": [
      {
        "id": "bridge.types.root",
        "properties": {
          "name": {
            "name": "Name",
            "type": "string",
            "default": "Unnamed"
          },
          "notes": {
            "name": "Notes",
            "type": "text"
          },
          "color": {
            "name": "Color",
            "type": "color",
            "default": "#FF4B7D"
          }
        }
      },
      {
        "id": "bridge.types.playable",
        "inherits": "bridge.types.root",
        "properties": {
          "tag": {
            "name": "Tag",
            "type": "string",
            "ui.group": "Timing"
          },
          "onPlay": {
            "name": "On play",
            "type": "enum",
            "default": 0,
            "enum": ["Do nothing", "Play next sibling", "Select next sibling (main client)"],
            "ui.group": "Timing"
          }
        }
      },
      {
        "id": "bridge.types.delayable",
        "inherits": "bridge.types.playable",
        "properties": {
          "delay": {
            "name": "Delay",
            "type": "string",
            "allowsVariables": true,
            "ui.group": "Timing",
            "ui.unit": "ms"
          }
        }
      },
      {
        "id": "bridge.types.media",
        "inherits": "bridge.types.playable",
        "properties": {
          "duration": {
            "name": "Duration",
            "type": "string",
            "ui.group": "Timing",
            "ui.unit": "ms"
          },
          "delay": {
            "name": "Delay",
            "type": "string",
            "allowsVariables": true,
            "ui.group": "Timing",
            "ui.unit": "ms"
          }
        }
      },
      {
        "id": "bridge.types.group",
        "name": "Group",
        "inherits": "bridge.types.media",
        "properties": {
          "playMode": {
            "name": "Play mode",
            "type": "enum",
            "default": 0,
            "enum": ["Trigger all children at once", "Trigger the first child"],
            "ui.group": "Timing"
          }
        }
      },
      {
        "id": "bridge.types.divider",
        "name": "Divider",
        "inherits": "bridge.types.root"
      }
    ]
  },
  "author": "Axel Boberg (axel.boberg@svt.se)",
  "license": "UNLICENSED"
}
